<div class="container">
  <h1 class="text-center pokemon-font">The Original 151 Pokemon</h1>
  <p class="text-center">
  </p>

  <!-- for each rendered pokemon from index.js app.get home route -->
  <!-- attach a form with a method of post to /pokemon -->
  <!-- submit buttons should POST pokemon clicked to favorite  -->
  
  <!-- at this point clicking add to favorites redirects us to /pokemon-->
  <!-- with raw object data of {'name': 'bulbosaur'} or whichever pokemon was clicked-->
  <% pokemon.forEach(pokemon => { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button class="btn btn-primary blue darken-2" type="submit">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
